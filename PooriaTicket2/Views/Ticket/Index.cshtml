

@model TicketList

@{
    ViewData["Title"] = "سیستم پوری تیکت";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>لیست تیکتهای @Model.UserName</h2> 
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Ticket" asp-action="Create" asp-route-UserId="@ViewBag.Id" class="btn btn-primary ">ایجاد تیکت</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>عنوان تیکت</th>
                
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model.Tickets)
            {
                <tr>
                    <td width="50%">@ticket.Title</td>
                    
                    <td>
                        <a asp-controller="Ticket" asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-primary">ویرایش</a>
                        <a asp-controller="Ticket" asp-action="Delete" asp-route-id="@ticket.Id" class="btn btn-warning">حذف</a>
                        <a asp-controller="Ticket" asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-primary">گفتگو</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



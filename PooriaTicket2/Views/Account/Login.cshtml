<div class="border p-3 col-4">
    <form method="post">
      <!-- UserName input -->
      <div class="form-outline mb-4">
        <input asp-for="UserName" class="form-control" />
        <label class="form-label" asp-for="UserName">User Name</label>
      </div>

      <!-- Password input -->
      <div class="form-outline mb-4">
        <input type="password" asp-for="Password" class="form-control" />
        <label class="form-label" asp-for="Password">Password</label>
      </div>

      <!-- 2 column grid layout for inline styling -->
      <div class="row mb-4">
        <div class="col d-flex justify-content-center">
          <!-- Checkbox -->
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
            <label class="form-check-label" for="form2Example31"> Remember me </label>
          </div>
        </div>

        <div class="col">
          <!-- Simple link -->
          <a href="#!">Forgot password?</a>
        </div>
      </div>

      <!-- Submit button -->
      <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

      <!-- Register buttons -->
      <div class="text-center">
        <p>Not a member? <a asp-action="Register" asp-controller="Home">Register</a></p>
               
      </div>
    </form>
</div>